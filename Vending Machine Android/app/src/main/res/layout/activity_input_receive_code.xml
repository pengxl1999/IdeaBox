<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/input_code"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/receive_code_0"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_2"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_3"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_4"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_5"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />

        <EditText
            android:id="@+id/receive_code_6"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginStart="40dp"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/input_code" />
    </LinearLayout>

</LinearLayout>